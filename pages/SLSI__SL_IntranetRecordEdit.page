<apex:page controller="SLSI.SL_IntranetRecordEditController" sidebar="false" showHeader="false" id="recordEditPage">   
	<apex:includeScript value="{!URLFOR($Resource.SLSI__SL_IntranetHub,'/IntranetHub/widgetJS/SL_IntranetRecordEdit.js')}" />
    <apex:form id="notifEventFormEditId">
   		
		<!-- Action Function to update on the record on Save -->
		<apex:actionFunction id="updateEditRecordAF" name="updateEventOrNotification" status="saveLoader" action="{!updateEventOrNotificationRecord}" onComplete="closeIframeAndRender('{!EventOrNotification}','{!strObjectName}');" />
   		<!-- End -->
   	
   		<!-- Action Function to Delete the record on Delete -->
   		<apex:actionFunction id="deleteEditRecordAF" name="deleteEventOrNotification" status="saveLoader" action="{!deleteEventOrNotificationRecord}" onComplete="closeIFrame('{!strObjectName}');" />
   		<!-- End -->
    <style>
        .textClass{
            margin: 5px 0 20px;
            padding: 3px;
            min-width: 170px;
            -webkit-border-radius: 4px;
            border-radius: 4px;
            border: 1px solid gray;
        }
        
        .Info{
            width:50%;
            font-size: 1em;
            font-weight: bold;
            font-family: Arial;
            color:#515151;
        }
        
        .fieldInfo{
            margin-left: 40px;
            margin-top: 10px;
        }
        
        .fieldInfo .leftInfo{
            float: left;
            width: 50%;
            height: 100px;
            font-size: 1em;
            font-weight: bold;
            font-family: Arial;
            color: #515151;
            margin-top: 10px;
        }
        .fieldInfo .rightInfo{
            float: right;
			width: 50%;
			height: 100px;
			font-size: 1em;
			font-weight: bold;
			font-family: Arial;
			color: #515151;
			margin-top: 10px;
        }
    </style>
    
    <script>
    	window.parent.document.body.style.overflow = "hidden";
    	var widId = '{!strWidgetId}'; //assigning widget id , so can be used in js file
    </script>
    
	    <div class="overlayDialog" style="display:block;visibility: visible;position: static;">        
			<div class="topRight">
			    <div class="topLeft">
			        <a class="dialogClose" onclick="parent.widget{!strWidgetId}.closeNotificationEventPopup();" 
			            onmouseout="this.className = 'dialogClose'" 
			            onmouseover="this.className = 'dialogCloseOn'" title="Close">Close</a>
			        <apex:outputpanel id="opNotifTitle" rendered="{!strObjectName == 'SLSI__Notification__c'}">
			        	<h2 id="contactInfoTitle" >Edit Notification</h2>
			        </apex:outputpanel>
			        <apex:outputpanel id="opEventTitle" rendered="{!strObjectName == 'SLSI__Intranet_Event__c'}">   
			        	<h2 id="contactInfoTitle" >Edit Event</h2>
			        </apex:outputpanel>
			    </div>
			</div>
	        <div class="middle" style="overflow-x: hidden;height: 373px;" id="middleSectionId">
				<apex:variable var="i" value="{!0}"/>
				<!-- This Section is used for displaying fields of Notification  -->
				<apex:repeat id="varRepeatNotfication" value="{!lstSObjectFields}" var="fieldValue" rendered="{!strObjectName == 'SLSI__Notification__c'}">   
					<apex:outputpanel id="notifEditFields">  <!-- rendered="{!(!$ObjectType.SLSI__Notification__c.Fields[fieldValue.fieldAPIName].htmlFormatted)}" -->
						<div class="fieldInfo" >
						    <apex:outputpanel id="opNotifField" styleclass="{!IF(fieldValue.fieldType != 'REFERENCE' && $ObjectType.SLSI__Notification__c.Fields[fieldValue.fieldAPIName].htmlFormatted == true,'leftInfo', IF((mod(i,2)) == 1, 'rightInfo', 'leftInfo'))}" 
						    				  style="width:{!IF(fieldValue.fieldType != 'REFERENCE' && $ObjectType.SLSI__Notification__c.Fields[fieldValue.fieldAPIName].htmlFormatted == true, '75%', '50%')}; 
						    				  height:{!IF(OR(fieldValue.fieldType == 'BOOLEAN',fieldValue.fieldType == 'DATE',fieldValue.fieldType == 'STRING',
						    				  fieldValue.fieldType == 'PICKLIST',fieldValue.fieldType == 'REFERENCE'),'100px',
						    				  IF(fieldValue.fieldType != 'REFERENCE' && $ObjectType.SLSI__Notification__c.Fields[fieldValue.fieldAPIName].htmlFormatted == true, '250px', '100px'))}" >
						        <apex:outputText id="otNotifField"> {!fieldValue.fieldLabel}: &nbsp; </apex:outputText>
						        <br/>
						        <apex:inputfield id="ipNotifField" value="{!EventOrNotification[fieldValue.fieldAPIName]}" />
						    </apex:outputpanel>
						</div>
					</apex:outputpanel>	 
					<apex:variable var="i" value="{!IF( AND (fieldValue.fieldType != 'REFERENCE' ,$ObjectType.SLSI__Notification__c.Fields[fieldValue.fieldAPIName].htmlFormatted == true, (mod(i,2)) == 0), i, i+1) }"/>
				</apex:repeat>
				<!-- End  -->
				<!-- This Section is used for displaying fields of Event -->
				<apex:repeat id="varRepeatEvent" value="{!lstSObjectFields}" var="fieldValue" rendered="{!strObjectName == 'SLSI__Intranet_Event__c'}">   
					<div class="fieldInfo">
					    <apex:outputpanel id="opEventFields" styleclass="{!IF(fieldValue.fieldType != 'REFERENCE' && $ObjectType.SLSI__Intranet_Event__c.Fields[fieldValue.fieldAPIName].htmlFormatted == true,'leftInfo', IF((mod(i,2)) == 1, 'rightInfo', 'leftInfo'))}" 
					    				  style="width:{!IF(fieldValue.fieldType != 'REFERENCE' && $ObjectType.SLSI__Intranet_Event__c.Fields[fieldValue.fieldAPIName].htmlFormatted == true, '75%', '50%')}; 
					    				  height:{!IF(OR(fieldValue.fieldType == 'BOOLEAN',fieldValue.fieldType == 'DATE',fieldValue.fieldType == 'STRING',
					    				  fieldValue.fieldType == 'PICKLIST',fieldValue.fieldType == 'REFERENCE'),'100px',
					    				  IF(fieldValue.fieldType != 'REFERENCE' && $ObjectType.SLSI__Intranet_Event__c.Fields[fieldValue.fieldAPIName].htmlFormatted == true, '250px', '100px'))}" >
					        <apex:outputText id="otEventField"> {!fieldValue.fieldLabel}: &nbsp; </apex:outputText>
					        <br/>
					        <apex:inputfield id="ipEventField" value="{!EventOrNotification[fieldValue.fieldAPIName]}" />
					    </apex:outputpanel>
					</div>
					<apex:variable var="i" value="{!IF( AND (fieldValue.fieldType != 'REFERENCE', $ObjectType.SLSI__Intranet_Event__c.Fields[fieldValue.fieldAPIName].htmlFormatted == true, (mod(i,2)) == 0), i, i+1) }"/>
				</apex:repeat>
			</div>
	        <div class="topRight" style="background: none;position: fixed;top: 90%;left: 0%;width: 100%;">
	            <div class="middle" style="padding-top: 5px;">
	                <table width="100%" border="">
	                    <tr>
	                        <td style="width:35%;">
	                            <input type="button" id="saveButton" class="btn" style="float:right;font-weight: bold;"
	                              Title="Save" value="Save" onclick="updateEventOrNotification();" /> 
	                        </td>
	                        <td style="width:5%;">
	                            <input id="deleteButton" class="btn" style="cursor: pointer;font-weight: bold;"
	                              type="button" Title="Delete" value="Delete" onclick="deleteConfirmBox('{!EventOrNotification}');"/ >
	                        </td>
	                        <td style="width:37%;">
	                            <input id="cancelButton" class="btn" style="cursor: pointer;font-weight: bold;"
	                              type="button" Title="Cancel" value="Cancel" onclick="parent.widget{!strWidgetId}.closeNotificationEventPopup();"/ >
	                        </td>
	                    </tr>
	                </table>    
	            </div>
	        </div>
	    </div>
    </apex:form>   
    
    <script>
    	initialLoad(); //limiting height and width of multipicklist and text area fields and positioning of date picker field
    </script>
    <apex:actionstatus id="saveLoader">
	    <apex:facet name="start">
	        <div id="salesforceSource_blurybackground" style="margin-top:0px;height:0px;position:relative; text-align:center; vertical-align: middle; background-color: #dcdcdc; opacity:0.5;filter:alpha(opacity=40)"></div>
	        <div id="ManageMembersViewport_loading" class="waitingSearchDiv" style="display: '';position: relative;">
	            <div style="width: 144px;vertical-align: middle;" class="waitingHolder">
	                <table align="center" valign="middle" style="width: 100%; height: 30%">
	                    <tr align="center" valign="middle" style="width: 100%; height: 30%"> 
	                        <td valign="middle"><img src="/img/loading.gif"/><span class="waitingDescription"><b>Loading...</b></span></td>
	                    </tr>
	                </table>
	            </div>
	        </div>
	    </apex:facet>
	</apex:actionstatus>
</apex:page>